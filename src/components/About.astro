---
import Social from "./Social.astro";
import profileImage from "../assets/me-1.png";
---

<section id="intro" class="about container">
    <div class="about__wrapper">
        <img
            src={profileImage.src}
            alt="Felipe Lopez"
            class="about__profile-img"
        />
        <h1 class="about__title">Hola, soy Felipe Lopez</h1>
        <p class="about__description">
            <span class="highlighted">
                Desarrollador web con más de un año creando proyectos y
                aplicaciones
            </span>. Más de dos años trabajando con datos en marketing y ventas.
            Me motiva construir soluciones que simplifiquen procesos y hagan el
            trabajo más fácil.
        </p>
        <div class="about__social">
            <Social />
        </div>
    </div>
</section>

<style>
    /* Bloque principal */
    .about__wrapper {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
    }

    /* Elementos */
    .about__profile-img {
        width: 80px;
        border-radius: 50%;
    }

    .about__title {
        font-size: var(--text-4xl);
        line-height: 1.2;
    }

    .about__description {
        font-size: var(--text-xl);
        font-weight: 500;
        line-height: 1.5;
    }

    /* Media Queries */
    @media (min-width: 768px) {
        .about__wrapper {
            max-width: 36rem;
        }
    }
</style>
