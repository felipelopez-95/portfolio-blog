---
import Tags from "../Tags.astro";
import githubIcon from "../../assets/social/github.svg";

export interface Props {
    imageSrc: string;
    imageAlt: string;
    title: string;
    description?: string;
    tags: Array<{
        iconSrc: string;
        label: string;
        alt?: string;
    }>;
    githubHref?: string;
    linkHref?: string;
}

const { imageSrc, imageAlt, title, description, tags, githubHref, linkHref } = Astro.props;
---

<article class="project-item">
    <figure class="project-item__figure">
        <img
            src={imageSrc}
            alt={imageAlt}
            class="project-item__image"
            width="400"
            height="240"
            loading="lazy"
        />
    </figure>
    <div class="project-item__content">
        <h3 class="project-item__title">{title}</h3>
        {description && <p class="project-item__description">{description}</p>}
        <Tags tags={tags} />
        <div class="project-item__actions">
            {githubHref && (
                <a
                    href={githubHref}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-item__btn"
                >
                    <span>
                        <img src={githubIcon.src} alt="" width="18" height="18" />
                    </span>
                    Code
                </a>
            )}
            {linkHref && (
                <a
                    href={linkHref}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="project-item__btn"
                >
                    <span class="project-item__btn-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                            <polyline points="15 3 21 3 21 9" />
                            <line x1="10" y1="14" x2="21" y2="3" />
                        </svg>
                    </span>
                    Preview
                </a>
            )}
        </div>
    </div>
</article>

<style>
    .project-item {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        padding: 1.25rem;
        border-radius: 0.75rem;
        background-color: var(--bg-secondary);
        box-shadow: var(--box-shadow);
    }

    .project-item__figure {
        margin: 0;
        border-radius: 0.5rem;
        overflow: hidden;
        aspect-ratio: 16 / 10;
        background-color: var(--bg-elevated);
    }

    .project-item__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .project-item__content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .project-item__title {
        font-size: var(--text-2xl);
        color: var(--accent-primary);
        margin: 0;
    }

    .project-item__description {
        line-height: 1.5;
        margin: 0;
    }

    .project-item__actions {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .project-item__btn {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        padding: 0.3rem 1rem;
        border-radius: calc(infinity * 1px);
        background-color: var(--bg-elevated);
        box-shadow: var(--box-shadow);
        font-size: var(--text-sm);
        color: var(--text-primary);
        transition: opacity 0.2s ease;
    }

    .project-item__btn:hover {
        opacity: 0.9;
    }

    .project-item__btn span {
        display: flex;
        align-items: center;
    }

    .project-item__btn img {
        filter: var(--icon-filter);
    }

    .project-item__btn-icon {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .project-item {
            flex-direction: row;
            align-items: center;
            gap: 1.5rem;
        }

        .project-item__figure {
            width: 280px;
            min-width: 280px;
            aspect-ratio: 16 / 10;
        }
    }
</style>
