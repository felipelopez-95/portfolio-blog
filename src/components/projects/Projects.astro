---
import iconProjects from "../../assets/icon-projects.svg";
import portfolioImage from "../../assets/project-portfolio.png";
import astroIcon from "../../assets/tech/astrojs.svg";
import cssIcon from "../../assets/tech/css.svg";
import htmlIcon from "../../assets/tech/html.svg";
import SectionTitle from "../SectionTitle.astro";
import ProjectItem from "./ProjectItem.astro";
---

<section id="projects" class="projects container" aria-labelledby="projects-title">
    <SectionTitle id="projects-title" iconSrc={iconProjects.src} iconAlt="Proyectos" title="Proyectos" />

    <ul class="projects__list">
        <li>
            <ProjectItem
            imageSrc={portfolioImage.src}
            imageAlt="Captura del proyecto portafolio"
            title="Portafolio"
            description="Portafolio personal desarrollado con Astro: secciones de experiencia laboral, proyectos y sobre mí. Diseño minimalista, responsive y con soporte para tema claro y oscuro."
            tags={[
                { iconSrc: astroIcon.src, label: "Astro" },
                { iconSrc: htmlIcon.src, label: "HTML" },
                { iconSrc: cssIcon.src, label: "CSS" },
            ]}
            githubHref="https://github.com/felipelopez-95/portfolio-blog"
        />
        </li>
    </ul>
</section>

<style>
    .projects__list {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }
</style>
