---
import githubIcon from "../assets/social/github.svg";
import linkedinIcon from "../assets/social/linkedin.svg";
import instagramIcon from "../assets/social/instagram.svg";
import emailIcon from "../assets/social/email.svg";
---

<nav class="social-nav" aria-label="Redes sociales">
    <ul class="social-list">
        <li>
            <a
                href="https://github.com/felipelopez-95"
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
            >
                <span>
                    <img src={githubIcon.src} alt="GitHub" width="18" height="18" />
                </span>
                GitHub
            </a>
        </li>
        <li>
            <a
                href="https://www.linkedin.com/in/felipelopez95/"
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
            >
                <span>
                    <img src={linkedinIcon.src} alt="LinkedIn" width="18" height="18" />
                </span>
                LinkedIn
            </a>
        </li>
        <li>
            <a
                href="https://www.instagram.com/felipelopez_95/"
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
            >
                <span>
                    <img
                        src={instagramIcon.src}
                        alt="Instagram"
                        width="18"
                        height="18"
                    />
                </span>
                Instagram
            </a>
        </li>
        <li>
            <a href="mailto:felipe.a0508@gmail.com" class="social-link">
                <span>
                    <img src={emailIcon.src} alt="Email" width="18" height="18" />
                </span>
                Email
            </a>
        </li>
    </ul>
</nav>

<style>
    .social-nav {
        display: block;
    }

    .social-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        row-gap: 0.6rem;
        column-gap: 0.4rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .social-link {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        padding: 0.3rem 1rem;
        border-radius: calc(infinity * 1px);
        background-color: var(--bg-secondary);
        box-shadow: var(--box-shadow);
    }

    .social-link span {
        display: flex;
        align-items: center;
    }

    @media (min-width: 768px) {
        .social-list {
            gap: 0.9rem;
        }
    }
</style>
